@using AuditStorageSystem.Framework
@model AuditStorageSystem.Models.Audit

@{
    ViewBag.Title = "Details";
}

<h2>Audits Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Project.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ServiceType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastAuditDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastAuditDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PlannedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlannedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Auditors)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Auditors)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Result)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Result)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Goal)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Goal)
        </dd>

        
        <dt>
            @Html.DisplayNameFor(model => model.Comments)
        </dt>

        <dd>
            <span class="multiline">
            @Html.DisplayFor(model => model.Comments)
            </span>
        </dd>

        @if (Model.Files.Any())
            {
                <dt>
                    Attachments
                </dt>
                <dd>
                    @foreach (var file in Model.Files)
                    {
                        <a href="~/File/Download?id=@file.FileId" target="_blank">@file.FileName</a>
                        <br>
                    }
                </dd>
            }
    </dl>
</div>
<p>
    @if (ViewBag.IsAddResultEnable)
    {
        @Html.ActionLink("Add Result", "AddResult", new { id = Model.AuditId })<span> | </span>
    }
    @if (ViewBag.IsEditEnable)
    {
        @Html.ActionLink("Edit", "Edit", new {id = Model.AuditId})<span> | </span>
    }
    @if (ViewBag.IsDeleteEnable)
    {
        @Html.ActionLink("Delete", "Delete", new {id = Model.AuditId})<span> | </span>
    }
    @Html.ActionLink("Back to List", "Index")
</p>
